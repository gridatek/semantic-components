      "@semantic-components/heroicons/solid/24": ["libs/heroicons/solid/24/src/index.ts"],
      "@semantic-components/ngx-schematics": ["libs/ngx-schematics/src/index.ts"],
      "@semantic-components/nx-generators": ["libs/nx-generators/src/index.ts"],
      "@semantic-components/ui": ["libs/ui/src/index.ts"]
