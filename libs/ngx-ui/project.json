{
  "name": "ngx-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ngx-ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ngx-ui",
        "main": "libs/ngx-ui/src/index.ts",
        "tsConfig": "libs/ngx-ui/tsconfig.lib.json",
        "assets": [
          "libs/ngx-ui/*.md",
          {
            "input": "./libs/ngx-ui/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/ngx-ui/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/ngx-ui",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/ngx-ui",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ngx-ui/jest.config.ts"
      }
    }
  }
}
